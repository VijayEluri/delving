<web-app version="2.5"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
        http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <display-name>Dashboard RPC</display-name>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            classpath:dashboard-application-context.xml
            classpath:database-application-context.xml
        </param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>spring</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>spring</servlet-name>
        <url-pattern>*.rpc</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>normalized-upload</servlet-name>
        <servlet-class>eu.europeana.dashboard.server.NormalizedFileUploadServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>normalized-upload</servlet-name>
        <url-pattern>/eu.europeana.dashboard.EuropeanaDashboard/uploadNormalized</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>sandbox-upload</servlet-name>
        <servlet-class>eu.europeana.dashboard.server.SandboxFileUploadServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>sandbox-upload</servlet-name>
        <url-pattern>/eu.europeana.dashboard.EuropeanaDashboard/uploadSandbox</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

</web-app>
