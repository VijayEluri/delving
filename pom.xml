<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>eu.europeana</groupId>
    <artifactId>europeana</artifactId>
    <version>1</version>
    <packaging>pom</packaging>

    <developers>
        <developer>
            <name>Sjoerd Siebinga</name>
            <email>sjoerd.siebinga@gmail.com</email>
            <roles>
                <role>architect</role>
            </roles>
        </developer>
        <developer>
            <name>Gerald de Jong</name>
            <email>geralddejong@gmail.com</email>
            <roles>
                <role>consultant</role>
            </roles>
        </developer>
        <developer>
            <name>Borys Omelayenko</name>
            <email>borys.omelayenko@gmail.com</email>
            <roles>
                <role>developer</role>
            </roles>
        </developer>
    </developers>

    <repositories>
         <repository>
                <id>releases</id>
                <url>http://europeanalabs.eu/artifactory/repo</url>
                 <snapshots>
                       <enabled>false</enabled>
                 </snapshots>
         </repository>
         <repository>
                 <id>snapshots</id>
                 <url>http://europeanalabs.eu/artifactory/repo</url>
                 <releases>
                        <enabled>false</enabled>
                 </releases>
         </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
                 <id>snapshots</id>
                 <url>http://europeanalabs.eu/artifactory/repo</url>
         </pluginRepository>
    </pluginRepositories>

    <modules>
        <module>query</module>
        <module>cache</module>
        <module>database</module>
        <module>normalizer</module>
        <module>resolver</module>
        <module>dashboard</module>
        <module>cache-servlet</module>
        <module>bootstrap</module>
        <module>portal-core</module>
        <module>portal-lite</module>
    </modules>
    <organization>
        <name>Europeana Foundation</name>
        <url>http://www.europeana.eu</url>
    </organization>
   
    <build>
         <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.4.1</version>
                <configuration>
                    <groups>regression</groups>
                    <parallel>true</parallel>
                    <systemProperties>
                        <property>
                            <name>europeana.properties</name>
                            <value>../query/src/test/resources/europeana.properties</value>
                        </property>
                    </systemProperties>      
                </configuration>
            </plugin>
         </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.5</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.14</version>
        </dependency>
        
    </dependencies>
    <properties>
        <europeana.query.version>1.0.1</europeana.query.version>
        <europeana.cache.version>1.0.1</europeana.cache.version>
        <europeana.database.version>1.0.1</europeana.database.version>
        <europeana.bootstrap.version>0.5</europeana.bootstrap.version>
        <europeana.resolver.version>1.0</europeana.resolver.version>
        <europeana.normalizer.version>2.8</europeana.normalizer.version>
        <europeana.portal.version>0.6</europeana.portal.version>
  
        <jdkLevel>1.6</jdkLevel>       
        <spring.version>2.5.6</spring.version>
        <jetty.version>6.1.7</jetty.version>
        <woodstox.version>3.2.0</woodstox.version>
        <htmlparser.version>1.6</htmlparser.version>
        <commons.io.version>1.4</commons.io.version>
        <commons.httpclient.version>3.1</commons.httpclient.version>
        <xstream.version>1.3.1</xstream.version>
        <htmlunit.version>2.5</htmlunit.version>
        <servlet.version>2.4</servlet.version>
        <postgres.version>8.2-504.jdbc3</postgres.version>
        
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    </properties>
</project>
