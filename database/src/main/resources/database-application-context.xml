<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xmlns:tx="http://www.springframework.org/schema/tx"
        xsi:schemaLocation=
                "http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
                http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd"
        >

    <context:annotation-config/>

    <bean id="europeanaProperties" class="eu.europeana.query.EuropeanaProperties"/>
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="properties" ref="europeanaProperties"/>
    </bean>

    <bean class="org.springframework.orm.jpa.support.PersistenceAnnotationBeanPostProcessor"/>

    <bean id="hibernateJpaVendorAdapter" class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
        <property name="showSql" value="false"/>
        <property name="generateDdl" value="true"/>
    </bean>

    <bean id="entityManagerFactory" class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="persistenceXmlLocation" value="classpath:/db/persistence.xml"/>
        <property name="dataSource" ref="dataSource"/>
        <property name="jpaVendorAdapter" ref="hibernateJpaVendorAdapter"/>
    </bean>

    <bean id="transactionManager" class="org.springframework.orm.jpa.JpaTransactionManager">
        <property name="entityManagerFactory" ref="entityManagerFactory"/>
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean name="userDao" class="eu.europeana.database.dao.UserDaoImpl"/>

    <bean name="searchTermDao" class="eu.europeana.database.dao.SearchTermDaoImpl"/>

    <bean name="partnerDao" class="eu.europeana.database.dao.PartnerDaoImpl"/>

    <bean name="messageDao" class="eu.europeana.database.dao.MessageDaoImpl"/>

    <bean name="dashboardDao" class="eu.europeana.database.dao.DashboardDaoImpl"/>

    <tx:annotation-driven proxy-target-class="true" transaction-manager="transactionManager"/>

    <bean id="connectionManagerParams" class="org.apache.commons.httpclient.params.HttpConnectionManagerParams">
        <property name="maxTotalConnections" value="512"/>
        <property name="defaultMaxConnectionsPerHost" value="64"/>
    </bean>

    <bean id="httpClient" class="org.apache.commons.httpclient.HttpClient">
        <constructor-arg>
            <bean class="org.apache.commons.httpclient.MultiThreadedHttpConnectionManager">
                <property name="params" ref="connectionManagerParams"/>
            </bean>
        </constructor-arg>
    </bean>


    <bean id="normalizedImportRepository" class="eu.europeana.incoming.ImportRepositoryImpl">
        <property name="dataDirectory" value="${dashboard.normalized.import.repository}"/>
    </bean>

    <bean id="normalizedEseImporter" class="eu.europeana.incoming.ESEImporterImpl">
        <property name="dashboardDao" ref="dashboardDao"/>
        <property name="importRepository" ref="normalizedImportRepository"/>
        <property name="solrIndexer" ref="solrIndexer"/>
        <property name="normalized" value="true"/>
    </bean>
    
    <bean id="queryModelFactory" class="eu.europeana.json.JsonQueryModelFactory">
        <property name="simpleQueryModelFactory"    ref="solrQueryModelFactory"/>
        <property name="advancedQueryModelFactory"  ref="solrQueryModelFactory"/>
    </bean>
    <bean id="solrQueryModelFactory" class="eu.europeana.json.solr.SolrQueryModelFactory">
        <property name="baseUrl"      value ="${solr.selectUrl}"/>
        <property name="httpClient"   ref   ="httpClient"/>
    </bean>

    <bean id="solrIndexer" class="eu.europeana.incoming.SolrIndexerImpl">
        <property name="dashboardDao" ref="dashboardDao"/>
        <property name="httpClient" ref="httpClient"/>
        <property name="targetUrl" value="${solr.updateUrl}"/>
        <property name="queryModelFactory" value="queryModelFactory"/>
        <property name="chunkSize" value="${solr.chunkSize}"/>
    </bean>

    <bean id="databaseCacheMaintainer" class="eu.europeana.incoming.CacheBuilder">
        <property name="chunkSize" value="30"/>
        <property name="dashboardDao" ref="dashboardDao"/>
        <property name="digitalObjectCache" ref="digitalObjectCache"/>
    </bean>

    <bean id="digitalObjectCache" class="eu.europeana.cache.DigitalObjectCacheImpl">
        <property name="imageMagickPath" value="${cache.imageMagickPath}"/>
        <property name="root" value="${cache.cacheRoot}"/>
    </bean>


</beans>
