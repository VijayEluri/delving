<?xml version="1.0" encoding="utf-8"?>
<europeana-profile>


    <!--
        possible attributes for metadata field
        namespace           (string, required)
                                "The name space of the metadata field. For example, 'dc' for dublin core."
        name                (string, required)
                                "The name of the metadata field. For example, 'title' for the title field."

        == Presentation ==
        briefdoc            (boolean, optional)
                                default: false
        fulldoc             (boolean, optional)
                                 default: false
        hidden              (boolean, optional)
                                "Means that field is not displayed anywhere. Overrides briefdoc fulldoc facet."

        == facet specfic fields  ==
        facet               (boolean, optional)
                                default: false
        facet-name          (string, optional)
                                 "if missing name is used as facet identifier"
        facet-abbrv         (string, optional)
                                 "used for solr query for multi select facets."
        facet-order         (string (number), optional)
                                ""


        == solr specific fields ==

        solr-field-type     (string) "must be one of the field types define in the schema.xml for solr", default: text
        multivalued         (boolean, optional)
        stored              (boolean, optional)
        indexed             (boolean, optional)
        required            (boolean, optional)
                                "If 'true' this field must be present in a record."
                                Default: false

    -->


    <fields>
        <!-- Europeana fields-->
         <field namespace="europeana" name="uri" required="true"
                 briefdoc="true" fulldoc="true" facet="false"/>
        <field namespace="europeana" name="hasObject" required="true"
                 briefdoc="false" fulldoc="true" hidden="true"
                 solr-field-type="boolean"/>

                <!-- With facets -->
         <field namespace="europeana" name="type" required="true"
                briefdoc="true" fulldoc="true"
                facet="true"/>
         <field namespace="europeana" name="year"
                briefdoc="false" fulldoc="false"
                facet="true" facet-abbrv="yr"/>


        <!-- Dublin Core Fields -->
        <!-- DCTERMS fields -->
        <!-- Your custom fields -->
    </fields>


    <config>
        <solr-schema generate="true" output-path="/tmp"/>
        <freemarker-templates generate="true" output-path="/tmp"/>
    </config>

</europeana-profile>