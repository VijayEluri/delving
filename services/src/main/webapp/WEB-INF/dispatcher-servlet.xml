<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-3.0.xsd
       ">

    <import resource="classpath:/secure-application-context.xml"/>

    <context:component-scan base-package="eu.delving.services.controller"/>


    <bean class="org.springframework.web.servlet.view.BeanNameViewResolver" />

    <bean id="serviceAccessToken" class="eu.delving.core.rest.ServiceAccessToken"/>

    <bean id="dataSetXmlView" class="org.springframework.web.servlet.view.xml.MarshallingView">
       <constructor-arg>
          <bean class="org.springframework.oxm.xstream.XStreamMarshaller">
             <property name="autodetectAnnotations" value="true"/>
          </bean>
       </constructor-arg>
    </bean>

    <bean id="localeChangeInterceptor" class="eu.europeana.core.util.web.LocaleChangeInterceptor">
        <property name="paramName" value="lang"/>
        <property name="clickStreamLogger" ref="clickStreamLogger"/>
    </bean>

    <bean id="localeResolver" class="org.springframework.web.servlet.i18n.CookieLocaleResolver">
        <property name="cookieMaxAge" value="3600"/>
        <property name="defaultLocale" value="en"/>
    </bean>

    <bean id="annotationMapper" class="org.springframework.web.servlet.mvc.annotation.DefaultAnnotationHandlerMapping">
        <property name="useDefaultSuffixPattern" value="false"/>
        <property name="interceptors">
            <list>
                <ref bean="localeChangeInterceptor"/>
                <!--<ref bean="configInterceptor"/>-->
            </list>
        </property>
    </bean>

    <bean id="messageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
        <property name="basename" value="#{launchProperties['message.resource']}"/>
        <property name="cacheSeconds" value="#{launchProperties['message.cache.seconds']}"/>
        <property name="fileEncodings" value="UTF-8"/>
        <property name="defaultEncoding" value="UTF-8"/>
    </bean>

    <bean id="exceptionResolver" class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerExceptionResolver"/>

</beans>
